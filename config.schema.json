{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "xmarks.config",
  "type": "object",
  "properties": {
    "pipeline": {
      "type": "object",
      "properties": {
        "keep_graphql_cache": {
          "type": "boolean"
        },
        "stages": {
          "type": "object"
        },
        "stage_reference": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "processor": { "type": "string" },
              "description": { "type": "string" },
              "capabilities": {
                "type": "array",
                "items": { "type": "string" }
              },
              "config_keys": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": true
    },
    "llm": {
      "type": "object",
      "properties": {
        "providers": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "api_key_env": { "type": "string" },
                "base_url": { "type": "string" },
                "models": {
                  "type": "object",
                  "patternProperties": {
                    "^[a-zA-Z0-9_-]+$": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "prompt": { "type": "string" },
                        "max_tokens": { "type": "integer" },
                        "temperature": { "type": "number" }
                      },
                      "required": ["id"],
                      "additionalProperties": false
                    }
                  },
                  "minProperties": 1
                }
              },
              "additionalProperties": false
            }
          },
          "minProperties": 1
        },
        "tasks": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "fallback": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "provider": { "type": "string" },
                      "model": { "type": "string" },
                      "use": { "type": "string" }
                    },
                    "required": ["provider"],
                    "additionalProperties": false
                  },
                  "minItems": 1
                }
              },
              "additionalProperties": false
            }
          }
        },
        "prompts": {
          "type": "object"
        }
      },
      "required": ["providers", "tasks"],
      "additionalProperties": true
    }
  },
  "required": ["llm"]
}
